<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>com.comparadorad.bet</groupId>
		<artifactId>comparer.synchro.reader</artifactId>
		<version>1.0.0-RELEASE</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<artifactId>comparer.synchro.reader.dataapp</artifactId>
	<packaging>jar</packaging>
	<name>${project.groupId}.${project.artifactId}</name>
	<properties>
		<service.name>ComparerApps.ReaderDataCreatorApp</service.name>
		<service.description>Compare Apps. Read the logs and updates de data
			in database.</service.description>
		<service.mainClass>com.comparadorad.bet.comparer.synchro.reader.dataapp.BatchReaderDataApp</service.mainClass>
		<default.service.environments>production,DATA_APP_CORRECT_DATABASE</default.service.environments>
	</properties>
	<build>
		<finalName>${project.groupId}.${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>create-repository</id>
						<phase>integration-test</phase>
						<goals>
							<goal>create-repository</goal>
						</goals>
					</execution>
					<execution>
						<id>generate-jsw-scripts</id>
						<phase>package</phase>
						<goals>
							<goal>generate-daemons</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<!--declare the JSW config -->
					<defaultJvmSettings>
						<initialMemorySize>64M</initialMemorySize>
						<maxMemorySize>512M</maxMemorySize>
					</defaultJvmSettings>
					<repositoryLayout>flat</repositoryLayout>
					<programs>
						<program>
							<name>${service.name}</name>
							<!-- class Main -->
							<mainClass>${service.mainClass}</mainClass>
						</program>
					</programs>
					<platforms>
						<platform>windows</platform>
					</platforms>
					<daemons>
						<daemon>
							<!-- Name Service -->
							<id>${service.name}</id>
							<mainClass>${service.mainClass}</mainClass>
							<platforms>
								<platform>jsw</platform>
							</platforms>
							<jvmSettings>
								<extraArguments>
									<extraArgument>-Dspring.profiles.active=${default.service.environments}</extraArgument>
								</extraArguments>
							</jvmSettings>
							<generatorConfigurations>
								<generatorConfiguration>
									<generator>jsw</generator>
									<configuration>
										<property>
											<name>wrapper.java.initmemory</name>
											<value>128M</value>
										</property>
										<property>
											<name>wrapper.java.maxmemory</name>
											<value>256M</value>
										</property>
										<property>
											<name>set.default.REPO_DIR</name>
											<value>lib</value>
										</property>
										<property>
											<name>wrapper.logfile</name>
											<value>logs/wrapper.log</value>
										</property>
										<property>
											<name>wrapper.logfile.maxsize</name>
											<value>10m</value>
										</property>
										<property>
											<name>wrapper.logfile.maxfiles</name>
											<value>25</value>
										</property>
										<property>
											<name>wrapper.ntservice.displayname</name>
											<value>${service.name}</value>
										</property>
										<property>
											<name>wrapper.ntservice.description</name>
											<value>>${service.description}</value>
										</property>
										<property>
											<name>wrapper.ping.interval</name>
											<value>10</value>
										</property>
										<property>
											<name>wrapper.ping.timeout</name>
											<value>60</value>
										</property>
										<property>
											<name>wrapper.ping.timeout.action</name>
											<value>RESTART</value>
										</property>
									</configuration>
								</generatorConfiguration>
							</generatorConfigurations>
						</daemon>
					</daemons>
					<target>${project.build.directory}/appassembler</target>
					<repoPath>jsw/${service.name}/lib/</repoPath>
				</configuration>

			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- Start com.comparadorad.bet -->
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.util.batch</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.model.config.service</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.model.config.service</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.synchro.reader.datasource</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.synchro.reader.readerbookmaker.core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.synchro.reader.processbookmaker</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.synchro.reader.writer</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.synchro.reader.app</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.util.commons</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.comparadorad.bet</groupId>
			<artifactId>comparer.util.logger</artifactId>
			<version>${project.version}</version>
		</dependency>
		<!-- End com.comparadorad.bet -->
		<!-- Start Spring -->
		<dependency>
			<groupId>org.springframework.batch</groupId>
			<artifactId>spring-batch-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.inject</groupId>
			<artifactId>javax.inject</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-jdbc</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-tx</artifactId>
		</dependency>
		<!-- End Spring -->
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
		</dependency>
		
		<!-- Start Simmetrics Algorithms -->
		<dependency>	
			<groupId>org.simmetrics</groupId>
			<artifactId>simmetrics</artifactId>
			<version>1.6.2.d07.02.07</version>
		</dependency>
		<!-- Ends Simmetrics Algorithms -->
	</dependencies>

</project>